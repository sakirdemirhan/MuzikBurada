@using System.Collections
@model Muzik.Models.RegisterViewModel
@{
    ViewBag.Title = "New Record";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal col-md-6", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <br/>
            <h4 class="text-center">Register !</h4>
            <br/>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GrupAdi, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.GrupAdi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.GrupAdi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GrupUyeleri, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.GrupUyeleri, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Aciklama, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.KurulusTarihi, new { @class = "col-md-6 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.KurulusTarihi, new { @class = "form-control", placeholder = "1.1.2017" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Genre", new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("TurID", new SelectList((IEnumerable)ViewData["Tur"], "TurID", "TurAdi","Select Genre"), new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.TurID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.WebSitesi, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.WebSitesi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.YoutubeLinki, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.YoutubeLinki, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Resim, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    <input name="Image" type="file"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-success col-md-10" value="Register" />
                </div>
            </div>
        }
        <div class="col-md-6">
            <img style="width: 100%; height: 80%;" src="http://www.mind-start.com/assets/images/Music.png" />
        </div>

    </div>
</div>


