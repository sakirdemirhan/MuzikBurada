
@model Entitiy.Models.Kullanici
@{
    ViewBag.Title = "GrupDetay";
    string video = "";
    string kurulusTarihi = "-";
    if (Model.YoutubeLinki != null)
    {
        video = Model.YoutubeLinki.Replace("watch?v=", "embed/");
    }
    if (Model.KurulusTarihi != null)
    {
        kurulusTarihi = Model.KurulusTarihi.Value.ToShortDateString();
    }
}
<style>
    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    .resim {
        
        display: block;
        margin: auto;
        width: 1000px;
        height: 600px;
        opacity: 0.5;
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.Resim" class="resim"/>
            <div class="centered"><h1 style="font-size: 100px;">@Model.GrupAdi</h1></div>
        </div>
        <div class="col-md-12">
            <hr/>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <h4 class="card-header" style="background-color: white">Grup Hakkında</h4>
                <div class="card-body" style="background-color: white">
                    <p class="card-text" style="color: black">
                        @Model.Aciklama
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <h4 class="card-header" style="background-color: white">Detaylar</h4>
                <div class="card-body" style="background-color: white">
                    <p class="card-text" style="color: black">
                        <ul>
                            <li>Tür: @Model.KullaniciTur.TurAdi</li>
                            <li>Kuruluş Tarihi: @kurulusTarihi</li>
                            <li>Üyeler: @Model.GrupUyeleri</li>
                            <li>Website: @Model.WebSite</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <p ><h3 class="text-center"> Grubun bir şarkısı </h3></p>
        </div>
        <div class="col-md-12">
            <iframe width="1105" height="500" src="@video" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
            
        </div>
        <div class="col-md-12">
            <p>
                <br/>
                <br />
                <br />
                <br />
                <br />
                <br />
            </p>
            <a href="#" class="btn btn-primary centered">
                <i class="fa fa-thumbs-up fa-5x">
                </i>
                <h4>Beğen</h4>
            </a>
        </div>
        
    </div>
    
</div>