@using Microsoft.AspNet.Identity
@model Muzik.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<div class="container">
    <div class="row">
        <p class="text-success">@ViewBag.StatusMessage</p>
        <div>
            <h4>Hesap Ayarları</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Şifre:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Şifreni Değiştir", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
                <dt style="color:red">Hesabını Sil</dt>
                <dd>
                    <button type="button" class="btn btn-danger silBtn" data-toggle="modal" data-target="#myModal" rel="@User.Identity.GetUserId()"><i class="fa fa-times"></i></button>
                </dd>
        
        
            </dl>
        </div>

    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Kayıt Sil</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <p><span >Hesabını gerçekten silmek istediğine emin misin ? 
                    <br/>Çünku bunun geri dönüşü yok !</span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <button type="button" id="modalBtnSil" class="btn btn-danger" data-dismiss="modal">Sil</button>
            </div>
        </div>

    </div>
</div>