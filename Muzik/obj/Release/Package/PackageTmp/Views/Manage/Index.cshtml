@using Microsoft.AspNet.Identity
@model Muzik.Models.IndexViewModel
@{
    ViewBag.Title = "Hesap Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <br/><br /><br />
            <h4>Hesap Ayarları</h4>
            <hr/>
            <dl class="dl-horizontal">
                <dt>Şifre:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Şifreni Değiştir", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
                <dt style="color: red">Hesabını Sil</dt>
                <dd>
                    <button type="button" class="btn btn-danger silBtn" style="cursor: pointer; width: 150px;" data-toggle="modal" data-target="#myModal" rel="@User.Identity.GetUserId()"><i class="fa fa-times"></i></button>
                </dd>
                <br /><br /><br />

            </dl>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Ciddi olamazsın !</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <p><span style="color: red">Hesabını gerçekten silmek istediğine emin misin ? 
                    <br/>Çünkü bunun geri dönüşü yok !</span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <button type="button" id="modalBtnSil" class="btn btn-danger" data-dismiss="modal">Sil</button>
            </div>
        </div>

    </div>
</div>
<script src="~/Content/vendor/jquery/jquery.min.js"></script>
<script>
    var id = "";
    $(".silBtn").click(function() {
        id =  $(this).attr("rel");
        console.log(id);
    });
    $("#modalBtnSil").click(function () {

        $.ajax({
            url: '/Home/KullaniciSil/' + id,
            type: "POST",
            success: function () {
                
            },
            error: function () {
                alert('Kayıt silinirken hata oluştu');
            }
        });
    });

</script>